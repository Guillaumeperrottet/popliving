<div class="booking-flex-grow">
  <div class="container booking-form-section py-5">
    <h2 class="text-center"><%= t('booking.request_availability') %></h2>

    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <% if @booking.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= t('booking.correct_errors') %></h4>
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @booking, local: true do |f| %>
      <div class="form-group mb-3">
        <label for="room"><%= t('booking.choose_room') %></label>
        <%= f.select :room_type, options_for_select([[t('booking.room_types.simple'), "simple"], [t('booking.room_types.studio'), "studio"], [t('booking.room_types.shared'), "shared"]]), {}, class: "form-control" %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="check_in"><%= t('booking.check_in_date') %></label>
          <%= f.date_field :check_in, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <label for="duration"><%= t('booking.stay_duration') %></label>
          <%= f.select :duration, options_for_select([[t('booking.durations.one_week'), "1_week"], [t('booking.durations.one_month'), "1_month"], [t('booking.durations.two_months_plus'), "2_months_plus"]]), {}, class: "form-control" %>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="message"><%= t('booking.message') %></label>
        <%= f.text_area :message, class: "form-control", placeholder: t('booking.message_placeholder') %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="first_name"><%= t('booking.first_name') %></label>
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <label for="last_name"><%= t('booking.last_name') %></label>
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="email"><%= t('booking.email') %></label>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="form-group mb-3">
        <label for="phone"><%= t('booking.phone') %></label>
        <%= f.telephone_field :phone, class: "form-control", required: true %>
      </div>

      <div class="form-group mb-3">
        <label for="address"><%= t('booking.address') %></label>
        <%= f.text_field :address, class: "form-control", required: true %>
      </div>

      <div class="text-center">
        <%= f.submit t('booking.submit'), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
