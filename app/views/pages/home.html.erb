                <img src="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1730276689/inde%CC%81pendant_bgjug7_wt6zb6.png') %>" class="d-block w-100 img-fluid" alt="<%= t('home.rooms.studio_image_alt') %>">
              </a>
            </div>
            <div class="carousel-item">
              <a href="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1730276690/Vue_balcon_bgjug8.png') %>" data-lightbox="studio-room" data-title="<%= t('home.rooms.studio_title') %>">
                <img src="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1730276690/Vue_balcon_bgjug8.png') %>" class="d-block w-100 img-fluid" alt="<%= t('home.rooms.studio_image_alt') %>">
