<!--rooms section-->
<div class="container rooms-section">
  <h2 class="text-center mb-5"><%= t('home.rooms.title') %></h2>
  <div class="row text-center">
    <!-- Room Card 1 -->
    <div class="col-md-4">
      <div class="room-card p-4" onclick="window.location='<%= new_booking_path %>'" style="cursor: pointer;">
        <!-- Carousel for multiple images -->
        <div id="carouselSimpleRoom" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <a href="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1734545638/Vue_cuisine_jwha61.png') %>" data-lightbox="simple-room" data-title="<%= t('home.rooms.simple_room_title') %>">
                <img src="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1734545638/Vue_cuisine_jwha61.png') %>" class="d-block w-100 img-fluid" alt="<%= t('home.rooms.simple_room_image_alt') %>">
              </a>
            </div>
            <div class="carousel-item">
              <a href="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1734545640/Vue_salon_jwha62.png') %>" data-lightbox="simple-room" data-title="<%= t('home.rooms.simple_room_title') %>">
                <img src="<%= Cloudinary::Utils.cloudinary_url('https://res.cloudinary.com/dafkgjhwt/image/upload/v1734545640/Vue_salon_jwha62.png') %>" class="d-block w-100 img-fluid" alt="<%= t('home.rooms.simple_room_image_alt') %>">
              </a>
            </div>
          </div>
          <!-- Carousel Controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselSimpleRoom" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselSimpleRoom" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <!-- Room Title and Description -->
        <h3><%= t('home.rooms.simple_room_title') %></h3>
        <p><%= simple_format(t('home.rooms.simple_room_description')) %></p>
      </div>
    </div>

    <!-- Room Card 2 -->
