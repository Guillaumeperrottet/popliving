<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to image_tag('logo.png', alt: 'Logo'), root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to t('navbar.home'), root_path, class: "nav-link" %>
        </li>
        <!--<li class="nav-item">
          <%= link_to t('navbar.how_it_works'), how_it_works_path, class: "nav-link" %>
        </li>-->
        <li class="nav-item">
          <%= link_to t('navbar.booking'), new_booking_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t('navbar.about'), about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t('navbar.contact'), contact_path, class: "nav-link" %>
        </li>
      </ul>
      <%= link_to t('navbar.book_now'), new_booking_path, class: "btn btn-primary ms-lg-3" %>
    </div>
  </div>
  <div class="language-switcher">
    <select id="language-select" class="form-select form-select-sm" onchange="changeLanguage(this)">
      <option value="fr" <%= 'selected' if I18n.locale == :fr %>>FR</option>
      <option value="en" <%= 'selected' if I18n.locale == :en %>>EN</option>
      <option value="de" <%= 'selected' if I18n.locale == :de %>>DE</option>
      <option value="pt" <%= 'selected' if I18n.locale == :pt %>>PT</option>
      <option value="es" <%= 'selected' if I18n.locale == :es %>>ES</option>
    </select>
  </div>
</nav>

<script>
  function changeLanguage(select) {
    const locale = select.value;
    const url = new URL(window.location.href);
    url.searchParams.set('locale', locale);
    window.location.href = url.toString();
  }
</script>
